@page "/project/projects"
@attribute [Authorize(Policy = Permissions.Projects.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<Projects> _localizer


<MudCard Elevation="0" Outlined="false" Class="mb-1">
    <MudCardContent>
        <MudToolBar>
            <HeroTitle Title="Projects Management" Description=""/>
            <MudSpacer />
            <MudFab Size="Size.Small" Color="Color.Secondary" OnClick="(() => ReturnHome())" IconSize="Size.Small" Icon="@Icons.Material.Filled.Close" aria-label="close" />
        </MudToolBar>
    </MudCardContent>
</MudCard>
<MudTabs Elevation="25" Rounded="true" Outlined="false" Color="@Color.Transparent" PrevIcon="@Icons.Filled.SkipPrevious" NextIcon="@Icons.Filled.SkipNext" PanelClass="mt-6">
    <MudTabPanel Text="Projects">
        <MudCard Elevation="25" Outlined="false" Class="mb-1">
            <MudToolBar>
                @if (_canCreateProjects)
                {                    
                    <MudFab Color="Color.Success" DisableElevation="true" Size="Size.Small" OnClick="(() => AddEdit(0))" IconSize="Size.Small" Icon="@Icons.Material.Filled.Add" aria-label="add" />
                    <MudFab Color="Color.Secondary" DisableElevation="true" Size="Size.Small" OnClick="GetProjectsAsync" IconSize="Size.Small" Icon="@Icons.Material.Filled.Refresh" Style="margin-left: 5px;" aria-label="refresh" />
                    @if (_canExportProjects)
                    {
                        <MudFab Color="Color.Secondary" DisableElevation="true" Size="Size.Small" OnClick="ExportToExcel" IconSize="Size.Small" Icon="@Icons.Custom.FileFormats.FileExcel" Style="margin-left: 5px;" aria-label="export" />
                    }
                }
                else
                {
                    <MudFab Color="Color.Secondary" DisableElevation="true" Size="Size.Small" OnClick="GetProjectsAsync" IconSize="Size.Small" Icon="@Icons.Material.Filled.Refresh" aria-label="refresh" />
                    @if (_canExportProjects)
                    {
                        <MudFab Color="Color.Secondary" DisableElevation="true" Size="Size.Small" OnClick="ExportToExcel" IconSize="Size.Small" Icon="@Icons.Custom.FileFormats.FileExcel" Style="margin-left: 5px;" aria-label="export" />
                    }
                }
                <MudSpacer />
            </MudToolBar>
        </MudCard>
        <MudGrid Spacing="1">
            @if (_projectList.Any())
            {
                foreach (var project in _projectList)
                {
                    <MudItem xs="12" sm="6" Class="mt-2">
                        <ProjectCard OnEditSelection="AddEdit" OnDeleteSelection="Delete" Project="@project" />
                    </MudItem>
                }
            }
        </MudGrid>
    </MudTabPanel>
    <MudTabPanel Text="Address">
        <MudGrid Spacing="1">
            @if (_projectList.Any())
            {
                foreach (var project in _projectList)
                {
                    <MudItem xs="12" sm="6" Class="mt-2">
                        <ProjectCard Project="@project" />
                    </MudItem>
                }
            }
        </MudGrid>
    </MudTabPanel>
</MudTabs>