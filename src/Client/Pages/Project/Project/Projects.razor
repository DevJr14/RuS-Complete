@page "/project/projects"
@attribute [Authorize(Policy = Permissions.Projects.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<Projects> _localizer
@using RuS.Application.Features.Projects.Queries;

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>

<HeroTitle Title="@_localizer["Projects"]" Description="@_localizer["Manage Projects."]" />
@if (!_loaded)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudTable Hover="true" Elevation="25" Items="_projectList" Dense="@_dense" Bordered="@_bordered" Striped="@_striped" Filter="new Func<ProjectResponse, bool>(Search)" @bind-brand="_project">
        <ToolBarContent>
            <div class="justify-center mud-text-align-center">
                @if (_canCreateProjects)
                {
                    <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" OnClick="(() => ProjectDetails(0))" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface">@_localizer["Create"]</MudButton>
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="GetProjectsAsync" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@_localizer["Reload"]</MudButton>
                    @if (_canExportProjects)
                    {
                        <MudButton DisableElevation Variant="Variant.Filled" OnClick="ExportToExcel" StartIcon="@Icons.Custom.FileFormats.FileExcel" IconColor="Color.Secondary" Color="Color.Surface" Style="margin-left: 5px;">@_localizer["Export"]</MudButton>
                    }
                }
                else
                {
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="GetProjectsAsync" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@_localizer["Reload"]</MudButton>
                    @if (_canExportProjects)
                    {
                        <MudButton DisableElevation Variant="Variant.Filled" OnClick="ExportToExcel" StartIcon="@Icons.Custom.FileFormats.FileExcel" IconColor="Color.Secondary" Color="Color.Surface" Style="margin-left: 5px;">@_localizer["Export"]</MudButton>
                    }
                }
            </div>
            <MudToolBarSpacer />
            @if (_canSearchProjects)
            {
                <MudTextField @bind-Value="_searchString" Immediate="true" Placeholder="@_localizer["Search for projects"]" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mb-3"></MudTextField>
            }
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Name)">@_localizer["Name"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Code)">@_localizer["Code"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Site.Name)">@_localizer["Site"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Category.Name)">@_localizer["Category"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Priority.Name)">@_localizer["Priority"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Status.Name)">@_localizer["Status"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.Start)">@_localizer["Start"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<ProjectResponse, object>(x => x.End)">@_localizer["End"]</MudTableSortLabel></MudTh>
            <MudTh Style="text-align:right">@_localizer["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">
                <MudHighlighter Text="@context.Name" HighlightedText="@_searchString" />
            </MudTd>
            <MudTd DataLabel="Code">
                <MudHighlighter Text="@context.Code" HighlightedText="@_searchString" />
            </MudTd>
            <MudTd DataLabel="Site">@context.Site.Name</MudTd>
            <MudTd DataLabel="Category">@context.Category.Name</MudTd>
            <MudTd DataLabel="Priority">@context.Priority.Name</MudTd>
            <MudTd DataLabel="Status">@context.Status.Name</MudTd>
            <MudTd DataLabel="Start">@context.Start</MudTd>
            <MudTd DataLabel="End">@context.End</MudTd>
            <MudTd DataLabel="Actions" Style="text-align: right">
                @if (_canEditProjects || _canDeleteProjects)
                    {
                    <MudMenu Label="@_localizer["Actions"]" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
                        @if (_canEditProjects)
                            {
                            <MudMenuItem @onclick="@(() => ProjectDetails(@context.Id))">@_localizer["Edit"]</MudMenuItem>
                            }
                        @if (_canDeleteProjects)
                            {
                            <MudMenuItem @onclick="@(() => Delete(@context.Id))">@_localizer["Delete"]</MudMenuItem>
                            }
                    </MudMenu>
                    }
                    else
                    {
                    <MudButton Variant="Variant.Filled"
                               DisableElevation="true"
                               StartIcon="@Icons.Material.Filled.DoNotTouch"
                               IconColor="Color.Secondary"
                               Size="Size.Small"
                               Color="Color.Surface">
                        @_localizer["No Allowed Actions"]
                    </MudButton>
                    }
            </MudTd>
        </RowTemplate>
        <FooterContent>
            <MudSwitch @bind-Checked="@_dense" Color="Color.Secondary" Style="margin-left: 5px;">@_localizer["Dense"]</MudSwitch>
            <MudSwitch @bind-Checked="@_striped" Color="Color.Tertiary" Style="margin-left: 5px;">@_localizer["Striped"]</MudSwitch>
            <MudSwitch @bind-Checked="@_bordered" Color="Color.Warning" Style="margin-left: 5px;">@_localizer["Bordered"]</MudSwitch>
        </FooterContent>
        <PagerContent>
            <TablePager />
        </PagerContent>
    </MudTable>
}