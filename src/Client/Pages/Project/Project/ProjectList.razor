@page "/project/projectlist"

<MudCard Elevation="0" Outlined="false" Class="mb-1">
    <MudCardContent>
        <HeroTitle Title="Projects" Description="Project Management" />
    </MudCardContent>
</MudCard>
<MudTabs Elevation="25" Rounded="true" Outlined="false" Color="@Color.Transparent" PrevIcon="@Icons.Filled.SkipPrevious" NextIcon="@Icons.Filled.SkipNext" PanelClass="mt-6">
    <MudTabPanel Text="Projects">
        <MudCard Elevation="25" Outlined="false" Class="mb-1">
            <MudToolBar>
                <MudText Typo="Typo.body1">Add New Project</MudText>
                <MudSpacer />
                <MudFab Color="Color.Success" Size="Size.Small" IconSize="Size.Small" Icon="@Icons.Material.Filled.Add" aria-label="add" />
            </MudToolBar>
        </MudCard>
        <MudGrid Spacing="1">
            @if (_projectList.Any())
            {
                foreach (var project in _projectList)
                {
                    <MudItem xs="12" sm="6" Class="mt-2">
                        <ProjectCard Project="@project" />
                    </MudItem>
                }
            }
        </MudGrid>
    </MudTabPanel>
    <MudTabPanel Text="Teams">
        <MudGrid Spacing="1">
            @if (_projectList.Any())
            {
                foreach (var project in _projectList)
                {
                    <MudItem xs="12" sm="6" Class="mt-2">
                        <ProjectCard Project="@project" />
                    </MudItem>
                }
            }
        </MudGrid>
    </MudTabPanel>
</MudTabs>