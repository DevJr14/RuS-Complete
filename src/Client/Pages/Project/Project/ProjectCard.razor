<MudCard Elevation="25" Outlined="false" Class="mb-1" @onclick="@(() => Details())" Style="cursor:pointer">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">P</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Project.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudMenu Icon="@Icons.Material.Filled.MoreVert" OffsetX="true" Direction="Direction.Left" Class="mr-3">
                <MudMenuItem>Activate</MudMenuItem>
                <MudMenuItem>Update</MudMenuItem>
                <MudMenuItem>Tracking</MudMenuItem>
            </MudMenu>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Project.Description</MudText>
    </MudCardContent>
</MudCard>


