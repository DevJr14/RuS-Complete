@page "/project/statuses"

@attribute [Authorize(Policy = Permissions.Categories.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<Statuses> _localizer
@using RuS.Application.Features.Statuses.Queries;

<HeroTitle Title="@_localizer["Status"]" Description="@_localizer["Manage Status"]" />

<EditForm Model="@_command" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudCard Elevation="25">
        <MudCardHeader>
            <CardHeaderAvatar>
                @if (Id == 0)
                {
                    <MudAvatar Size="Size.Small" Color="Color.Success"><b>+</b></MudAvatar>
                }
                else
                {
                    <MudAvatar Size="Size.Small" Color="Color.Primary"><b>+</b></MudAvatar>
                }
            </CardHeaderAvatar>
            <CardHeaderContent>
                @if (Id != 0)
                {

                    <MudText Typo="Typo.body1">@_localizer["Update"]</MudText>
                }
                else
                {
                    <MudText Typo="Typo.body1">@_localizer["Add"]</MudText>
                }
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="3" md="2">
                    <MudTextField @bind-Value="@_command.Name"
                                  For="@(() => _command.Name)"
                                  Label="@_localizer["Name"]"
                                  Variant="Variant.Text"
                                  Adornment="Adornment.End"
                                  Margin="Margin.Dense"
                                  AdornmentIcon="@Icons.Filled.Category" />
                </MudItem>
                <MudItem xs="12" sm="9" md="10">
                    <MudTextField @bind-Value="@_command.Description"
                                  For="@(() => _command.Description)"
                                  Label="@_localizer["Description"]"
                                  Variant="Variant.Text"
                                  Adornment="Adornment.End"
                                  Margin="Margin.Dense"
                                  AdornmentIcon="@Icons.Filled.Description" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton DisableElevation OnClick="@(Reset)" Style="margin-left:7px;" Variant="Variant.Filled">@_localizer["Reset"]</MudButton>
            <MudSpacer />
            @if (Id != 0)
            {
                <MudButton DisableElevation Style="margin-right:7px;" Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
            }
            else
            {
                <MudButton DisableElevation Style="margin-right:7px;" Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
            }
        </MudCardActions>
    </MudCard>
</EditForm>

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>
@if (!_loaded)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudTable Hover="true" Elevation="25" Style="margin-top:15px;" Items="_statusList" Dense="@_dense" Bordered="@_bordered" Striped="@_striped" Filter="new Func<StatusResponse, bool>(Search)" @bind-brand="_status">
        <ToolBarContent>
            <div class="justify-center mud-text-align-center">
                @if (_canCreateStatuses)
                {
                    @*<MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" OnClick="(() => UpdateCategory())" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface">@_localizer["Create"]</MudButton>*@
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="GetStatusesAsync" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@_localizer["Reload"]</MudButton>
                    @if (_canExportStatuses)
                    {
                        <MudButton DisableElevation Variant="Variant.Filled" OnClick="ExportToExcel" StartIcon="@Icons.Custom.FileFormats.FileExcel" IconColor="Color.Secondary" Color="Color.Surface" Style="margin-left: 5px;">@_localizer["Export"]</MudButton>
                    }
                }
                else
                {
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="GetStatusesAsync" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@_localizer["Reload"]</MudButton>
                    @if (_canExportStatuses)
                    {
                        <MudButton DisableElevation Variant="Variant.Filled" OnClick="ExportToExcel" StartIcon="@Icons.Custom.FileFormats.FileExcel" IconColor="Color.Secondary" Color="Color.Surface" Style="margin-left: 5px;">@_localizer["Export"]</MudButton>
                    }
                }
            </div>
            <MudToolBarSpacer />
            @if (_canSearchStatuses)
            {
                <MudTextField @bind-Value="_searchString" Immediate="true" Placeholder="@_localizer["Search for Status"]" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mb-3"></MudTextField>
            }
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<StatusResponse, object>(x => x.Name)">@_localizer["Name"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<StatusResponse, object>(x => x.Description)">@_localizer["Description"]</MudTableSortLabel></MudTh>
            <MudTh Style="text-align:right">@_localizer["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">
                <MudHighlighter Text="@context.Name" HighlightedText="@_searchString" />
            </MudTd>
            <MudTd DataLabel="Description">
                <MudHighlighter Text="@context.Description" HighlightedText="@_searchString" />
            </MudTd>
            <MudTd DataLabel="Actions" Style="text-align: right">
                @if (_canEditStatuses || _canDeleteStatuses)
                    {
                    <MudMenu Label="@_localizer["Actions"]" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
                        @if (_canEditStatuses)
                            {
                            <MudMenuItem @onclick="@(() => UpdateStatus(@context.Id))">@_localizer["Edit"]</MudMenuItem>
                            }
                        @if (_canDeleteStatuses)
                            {
                            <MudMenuItem @onclick="@(() => Delete(@context.Id))">@_localizer["Delete"]</MudMenuItem>
                            }
                    </MudMenu>
                    }
                    else
                    {
                    <MudButton Variant="Variant.Filled"
                               DisableElevation="true"
                               StartIcon="@Icons.Material.Filled.DoNotTouch"
                               IconColor="Color.Secondary"
                               Size="Size.Small"
                               Color="Color.Surface">
                        @_localizer["No Allowed Actions"]
                    </MudButton>
                    }
            </MudTd>
        </RowTemplate>
        <FooterContent>
            <MudSwitch @bind-Checked="@_dense" Color="Color.Secondary" Style="margin-left: 5px;">@_localizer["Dense"]</MudSwitch>
            <MudSwitch @bind-Checked="@_striped" Color="Color.Tertiary" Style="margin-left: 5px;">@_localizer["Striped"]</MudSwitch>
            <MudSwitch @bind-Checked="@_bordered" Color="Color.Warning" Style="margin-left: 5px;">@_localizer["Bordered"]</MudSwitch>
        </FooterContent>
        <PagerContent>
            <TablePager />
        </PagerContent>
    </MudTable>
}

